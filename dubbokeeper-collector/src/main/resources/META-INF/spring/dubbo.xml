<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <bean class="com.dubboclub.dk.collector.Configuration" id="configuration">
        <property name="threadPoolSize" value="${tracing.collector.storage.thread.size}"/>
    </bean>

    <bean class="com.dubboclub.dk.collector.support.DefaultCollectionService" id="defaultCollectionService">
        <constructor-arg name="configuration" ref="configuration"/>
        <property name="traceDataStorage" ref="traceDataStorage"/>
    </bean>

    <dubbo:service interface="net.dubboclub.tracing.api.TracingCollector" ref="defaultCollectionService"/>


</beans>